#!/bin/bash

# .bootstrap/Containerfile.fedora hash: {{ include "dot_bootstrap/dconf.ini" | sha256sum }}

# Restore current dconf if not the machine who performed a snapshot.
MASTER=$(head -1 {{ joinPath .chezmoi.sourceDir "dot_bootstrap/restic-master" | quote }})
THIS=$(cat /etc/machine-id)
if [ $THIS != $MASTER ]; then 
  dconf load -f / < {{ joinPath .chezmoi.sourceDir "dot_bootstrap/dconf.ini" | quote }}
fi
